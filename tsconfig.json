{
  "compileOnSave": false,
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es6"
    ],
    "outDir": "./dist",
    "removeComments": false,
    "target": "es5",
    "skipLibCheck": true,
    "strict": true
  },
  "include": [
    "src/*.ts"
  ],
  "angularCompilerOptions" : {
    "skipTemplateCodegen": true
  }
}
